<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/system_accent1_600"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    tools:ignore="NewApi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome!"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="32dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register to continue"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="8dp"
            android:textSize="14dp"
            android:textStyle="italic"></TextView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_gravity="center"
            android:background="@android:color/system_accent1_600"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="NewApi">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"></TextView>
            <EditText
                android:id="@+id/edittextlogin"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email@gmail.com"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                ></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"></TextView>
            <EditText
                android:id="@+id/edittextposswordlog"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="*******"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                ></EditText>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp"
                android:backgroundTint="#2364D5"
                android:layout_gravity="center"
                app:cardPreventCornerOverlap="true">
                <TextView
                    android:id="@+id/buttonlogin"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textColor="@color/white"></TextView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textviewreg"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register !"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:id="@+id/progressborlog"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ProgressBar>

</LinearLayout>